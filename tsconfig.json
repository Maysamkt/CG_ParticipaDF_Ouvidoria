{
  "include": ["client/src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "strict": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,

    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./client/src/*"]
    }
  }
}
